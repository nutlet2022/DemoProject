<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MovieServelt</servlet-name>
        <servlet-class>com.movie.servelt.MovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieServelt</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RatingServelt</servlet-name>
        <servlet-class>com.movie.servelt.RatingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RatingServelt</servlet-name>
        <url-pattern>/ratings</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>PopularServlet</servlet-name>
        <servlet-class>com.movie.servelt.PopularServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PopularServlet</servlet-name>
        <url-pattern>/popular</url-pattern>
    </servlet-mapping>

</web-app>